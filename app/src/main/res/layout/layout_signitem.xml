<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monteserrat_medium"
            android:textSize="@dimen/_14sdp"
            android:textColor="#303030"
            android:text="Sign Information:"/>

        <RadioGroup
            android:id="@+id/radioSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/signOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp"
                android:enabled="true"
                android:buttonTint="@color/colorPrimary"
                android:text="Sign Only"/>

            <RadioButton
                android:id="@+id/signandLockbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp"
                android:buttonTint="@color/colorPrimary"
                android:text="Sign and Lockbox"/>
            <RadioButton
                android:id="@+id/lockbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp"
                android:buttonTint="@color/colorPrimary"
                android:text="Lockbox Only"/>

        </RadioGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_nosign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat"
                android:hint="Number of signs"
                android:inputType="text"
                android:padding="10dp"
                android:paddingBottom="3dp"
                android:textColor="#303030"
                android:textColorHint="@color/app_dark_gray_color" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat"
                android:hint="Sign Description"
                android:inputType="text"
                android:padding="10dp"
                android:paddingBottom="3dp"
                android:textColor="#303030"
                android:textColorHint="@color/app_dark_gray_color" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat"
                android:hint="Sign placement instructions"
                android:inputType="text"
                android:padding="10dp"
                android:paddingBottom="3dp"
                android:textColor="#303030"
                android:textColorHint="@color/app_dark_gray_color" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monteserrat_medium"
            android:textSize="@dimen/_14sdp"
            android:textColor="#303030"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Lockbox Information:"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat"
                android:hint="Lockbox location"
                android:inputType="text"
                android:padding="10dp"
                android:paddingBottom="3dp"
                android:textColor="#303030"
                android:textColorHint="@color/app_dark_gray_color" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_RealeseCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat"
                android:hint="Lockbox Shackle Release Code"
                android:inputType="text"
                android:padding="10dp"
                android:paddingBottom="3dp"
                android:textColor="#303030"
                android:textColorHint="@color/app_dark_gray_color" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</LinearLayout>
