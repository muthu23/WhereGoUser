<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@android:color/white"
    android:elevation="@dimen/_5sdp"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnr_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="A"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/src_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/white_color_rect_shape"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/source_location"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/view_grey_bg"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.wherego.delivery.user.Utils.MyBoldTextView
                android:id="@+id/letters_txt"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="A"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <com.wherego.delivery.user.Utils.MyTextView
                android:id="@+id/dest_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/white_color_rect_shape"
                android:hint="@string/destination_location"
                android:lines="1"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/view_grey_bg" />

            <ImageView
                android:id="@+id/close_img"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/close"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp">

            <com.wherego.delivery.user.Utils.MyTextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="A"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/good_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@drawable/white_color_rect_shape"
                android:gravity="start"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/view_grey_bg" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/close"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
