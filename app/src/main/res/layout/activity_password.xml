<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="@dimen/_minus25sdp"
        android:background="@drawable/loginbg">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_124sdp"
                android:layout_height="@dimen/_110sdp"

                android:src="@drawable/appicon"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_12sdp"
        android:background="@drawable/bottom_dialog_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_25sdp"
            android:paddingStart="@dimen/_25sdp"
            android:paddingEnd="@dimen/_25sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:hint="@string/email"
                android:textColorHint="@color/textColor"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12sdp"
                android:inputType="textEmailAddress"
                android:background="@drawable/red_color_rect_shape"/>
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:hint="@string/password"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="@color/textColor"
                android:textColor="@color/textColor"
                android:inputType="textPassword"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/red_color_rect_shape"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.wherego.delivery.user.Utils.MyBoldTextView
                    android:id="@+id/txtSignUp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Register"
                    android:textSize="@dimen/_12sdp" />

                <com.wherego.delivery.user.Utils.MyTextView
                    android:id="@+id/txtForget"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:text="Forgot Password ?" />
            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_color_rect_shape"
                android:backgroundTint="@color/colorButton"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/white"
                android:padding="@dimen/_7sdp"
                android:textSize="@dimen/_14sdp"
                android:text="Login"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">

                <com.wherego.delivery.user.Utils.MyTextView
                    android:id="@+id/btnGoogle"
                    android:layout_weight="1"
                    android:paddingEnd="@dimen/_10sdp"
                    android:drawableEnd="@drawable/ic_google"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_color_rect_shape"
                    android:text="Google Login"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:gravity="center|end"
                    android:textSize="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_height="@dimen/_36sdp" />
                <com.wherego.delivery.user.Utils.MyTextView
                    android:id="@+id/btnFb"
                    android:layout_weight="1"
                    android:textSize="@dimen/_10sdp"
                    android:drawableEnd="@drawable/ic_facebook"
                    android:layout_width="match_parent"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:text="Facebook Login"
                    android:background="@drawable/red_color_rect_shape"
                    android:gravity="center|end" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/_124sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/colorAccent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/home_button"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
